{
  "manifest_version": 3,
  "name": "AgentBoard",
  "version": "0.0.0",
  "description": "A switchboard for AI in your browser: wire in any model, script WebMCP tools, connect remote MCP servers, bring your commands.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "sidePanel",
    "contextMenus",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": ["https://*/*", "http://localhost/*"],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Toggle AgentBoard"
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle AgentBoard"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
